import java.util.Scanner;

public class Task_15 {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		System.out.println("Enter N:");
		int n = input.nextInt();
		int sum = 0;
		int i;
		do{
			for(i = n; i >= 1; i--){
				sum+= i;
			} 
		}while(i < 1 || i > n);

	}

}
