import java.util.Scanner;

public class Task_19 {

	public static void main(String[] args) {
		
		Scanner input = new Scanner(System.in);
		int num = 0;
		int nextElement = 1;
		
		do{
		System.out.println("Enter a number [10 ... 99]: ");
		num = input.nextInt();
		
		}while(num < 10 || num > 99);
		
		
		if(num % 2 != 0){
			for(int i = num; i >= 1; i=i*3+1){
				if(i % 2 != 0){
					//i = (i*3)+1;
					num = i;
					System.out.println(i);
			}
		}
		
		}
		
		if(num % 2 == 0){
			for(int i = num; i >= 1; i*=0.5){
				if(i % 2 == 0){
					//i = (int) (i*0.5);
					num = i;
					System.out.println(i);
			}
		}
		
		}
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		/*for(int i = num; i >= 1; )
		{
			if(i % 2 != 0){
				i = (i*3)+1;
				num = i;
				System.out.println(i);				
			}
			
			else{
				if(i % 2 == 0){
					i*=0.5;
					num = i;
					System.out.println(i);
					
				}
			}
			
			
			}*/
		
	}
}


