import java.util.Scanner;

public class Task_14 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		System.out.println("Enter n: ");
		int n = input.nextInt();
		System.out.println(n + "! = " + factorial(n));
		

	}

	static int factorial(int n){
		int result = 1;
		for(int i = 1; i < n; i++){
			result+= n*(n-i);
		}
		return result;
		
	}
}
