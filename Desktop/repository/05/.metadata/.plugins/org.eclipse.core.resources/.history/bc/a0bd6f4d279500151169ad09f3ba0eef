import java.util.Scanner;

public class Task_6 {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		String str = null;
		System.out.println("Enter sentence: ");
		str = input.nextLine();
		
		if(str.charAt(0) >= 97 || str.charAt(0) <= 122){
		str = str.replace(str.charAt(0), (char) (str.charAt(0) - 32));
		}
		
		for (int i = 1; i < str.length(); i++) {
			
			
			
			/*if (i == 0) {
				str = str.replace(str.charAt(i), (char) (str.charAt(i) - 32));

			}*/

			if (str.charAt(i) == ' ' && (str.charAt(i+1) >= 97 || str.charAt(i+1) <= 122)) {
				str = str.replace(str.charAt(i + 1), (char) (str.charAt(i + 1) - 32));
			}
		}
		System.out.println(str);
		input.close();

	}

}
